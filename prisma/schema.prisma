datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room{
  id        Int      @unique  @id @default(autoincrement())
  current_video     String
  current_second    Float
  isPlaying         Boolean
  host Int @default(1)
  users     Int[]
}
